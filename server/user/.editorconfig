root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100
ij_any_align_multiline_for = false
ij_php_align_key_value_pairs = true
ij_php_else_if_style = combine
ij_php_if_rparen_on_next_line = false
ij_php_blank_lines_after_function = unset
ij_php_method_parameters_right_paren_on_new_line = false
ij_any_align_multiline_parameters = false
ij_any_call_parameters_wrap = normal

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[docker-compose.yml]
indent_size = 4
